{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@atomic": [
        "./src/atomic"
      ],
      "@atomic/*": [
        "./src/atomic/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@components": [
        "./src/components"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@data": [
        "./src/data"
      ],
      "@data/*": [
        "./src/data/*"
      ],
      "@domain": [
        "./src/domain"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@infra": [
        "./src/infra"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@model": [
        "./src/model"
      ],
      "@model/*": [
        "./src/model/*"
      ],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
